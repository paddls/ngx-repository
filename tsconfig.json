{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@paddls/ngx-repository": [
        "projects/ngx-repository/src/public-api"
      ],
      "@paddls/ngx-http-repository": [
        "projects/ngx-http-repository/src/public-api"
      ],
      "@paddls/ngx-firestore-repository": [
        "projects/ngx-firestore-repository/src/public-api"
      ],
      "@paddls/utils": [
        "projects/utils"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
